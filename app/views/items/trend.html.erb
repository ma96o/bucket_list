    <div class="container">
        <section class="content-main">
            <div class="center-block">
                <div class="col-md-10 col-xs-offset-1">
                    <!--search box-->
                    <%= form_tag "/items/trend/#{@genre}", method: :get do %>
                    <div class="input-group">
                      <%= text_field_tag :search_word, '', class: 'form-control', placeholder: '項目検索' %>
                      <span class="input-group-btn">
                        <button class="btn btn-pink" type="submit">
                          <i class='glyphicon glyphicon-search'></i>
                        </button>
                      </span>
                    </div>
                    <% end %>
                </div>
            </div>
        </section>
    </div>

<br>
<div class="container">
    <div class="center-block">
    <div class="col-md-8 col-xs-offset-2">
          <ul class="nav nav-pills nav-justified">
          <% if @genre == 'hot' %>
              <li><%= link_to 'NEW', trend_items_path('new', search_word: @search_word) %></li>
              <li class="active"><%= link_to 'HOT', trend_items_path('hot', search_word: @search_word) %></li>
          <% else %>
              <li class="active"><%= link_to 'NEW', trend_items_path('new', search_word: @search_word) %></li>
              <li><%= link_to 'HOT', trend_items_path('hot', search_word: @search_word) %></li>
          <% end %>
          </ul>
    </div>
    </div>
</div>
 <br />
    <div class="container">
      <div class="row">
        <section id="pinBoot">

          <!--content-->
        <% @items.each do |item| %>
          <article class="white-panel">
            <%= link_to '', data: {toggle: :modal, target: '#item_detail', id: item.id, title: item.name, comment: item.comment, done: done_users(item).count, doing: doing_users(item).count} do %>
                <h4 class="item_name"><%= item.name %></h4>
                <span class="doing">doing <%= doing_users(item).count %></span>
                <span class="done">done <%= done_users(item).count %></span>
            <% end %>
            <p>
            <%= button_tag type: :button, class: "btn btn-pink btn-circle center-block", data: {toggle: :modal, target: '#add_new', id: item.id, title: item.name, comment: item.comment} do %>
                <i class="fa fa-plus" aria-hidden="true"></i>
            <% end %>
            </p>
          </article>
        <% end %>

        </section>
        </div>
    </div>

    <%= render 'items/add_trend' %>
    <%= render 'items/show_trend' %>

  <div class="container">

        <div class="container-fluid">
          <div class="row">
            <div class="content-main">
              <section class="col-sm-10 col-xs-offset-1 main-content">
  
                <div class="timeline_list">
                    <h4><i class="fa fa-tags" aria-hidden="true"></i>  timeline</h4>

                    <% @actions.each do |action| %>
                      <% if false # ?php if($action['user_id'] == $_SESSION['user_id']): %>

                            <div class="timeline">
                                  <img class="img-circle" src="#" width="50" height="50">
                                  <p class="name"><a href="#">Your action</a></p>
                                  <p class="date"><%= action.created_at %></p>
                          <% if action.status == 1 %>
                                  <span class="detail_doing"><q><%= action.item.name %></q>を<a href="#">バケットリスト</a>に追加しました。
                                </span>
                          <% elsif action.status == 2 %>
                                  <span class="detail_done"><q><%= action.item.name %></q>を<a href="#">達成リスト</a>に追加しました。
                                </span>
                          <% elsif action.status == 3 %>
                                  <span class="detail_trash"><q><%= action.item.name %></q>を<a href="#">ゴミ箱リスト</a>に追加しました。
                                </span>
                          <% end %>
                            </div>

                      <% else %>

                        <div class="timeline bg_w">
                              <img class="img-circle" src="/plofile_fb_n.jpg" width="50" height="50">
                              <p class="name"><a href="#"><%= action.user.name %></a></p>
                              <p class="date"><%= action.created_at %></p>
                          <% if action.status == 1 %>
                              <span class="detail_doing"><a href="#"><%= action.user.name %></a>ちゃんが<q><%= action.item.name %></q>を<a href="#">バケットリスト</a>に追加しました。
                                </span>
                          <% elsif action.status == 2 %>
                              <span class="detail_done"><a href="#"><%= action.user.name %></a>ちゃんが「<%= action.item.name %>」を<a href="#">達成リスト</a>に追加しました。
                                </span>
                          <% elsif action.status == 3 %>
                              <span class="detail_trash"><a href="#"><%= action.user.name %></a>ちゃんが「<%= action.item.name %>」を<a href="#">ゴミ箱リスト</a>に追加しました。
                                </span>
                      <% end %>
                        </div>

                      <% end %>
                    <% end %>

            </section>
          </div>
        </div>
    </div>
</div>

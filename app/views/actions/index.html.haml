.container
  .container-fluid
    .row
      .content-main
        %section.col-sm-10.col-xs-offset-1.main-content
          .timeline_list
            %h4
              %i.fa.fa-tags{"aria-hidden" => "true"}
              timeline
            - @actions.each do |action|
              - if false # ?php if($action['user_id'] == $_SESSION['user_id']):
                .timeline
                  %img.img-circle{:height => "50", :src => "#", :width => "50"}/
                  %p.name
                    %a{:href => "#"} Your action
                  %p.date= action.created_at
                  - if action.status == 1
                    %span.detail_doing
                      %q>= action.item.name
                      を
                      %a{:href => "#"}> バケットリスト
                      に追加しました。
                  - elsif action.status == 2
                    %span.detail_done
                      %q>= action.item.name
                      を
                      %a{:href => "#"}> 達成リスト
                      に追加しました。
                  - elsif action.status == 3
                    %span.detail_trash
                      %q>= action.item.name
                      を
                      %a{:href => "#"}> ゴミ箱リスト
                      に追加しました。
              - else
                .timeline.bg_w
                  %img.img-circle{:height => "50", :src => "/plofile_fb_n.jpg", :width => "50"}/
                  %p.name
                    %a{:href => "#"}= action.user.name
                  %p.date= action.created_at
                  - if action.status == 1
                    %span.detail_doing
                      %a{:href => "#"}>= action.user.name
                      ちゃんが
                      %q>= action.item.name
                      を
                      %a{:href => "#"}> バケットリスト
                      に追加しました。
                  - elsif action.status == 2
                    %span.detail_done
                      %a{:href => "#"}>= action.user.name
                      ちゃんが「#{action.item.name}」を
                      %a{:href => "#"}> 達成リスト
                      に追加しました。
                  - elsif action.status == 3
                    %span.detail_trash
                      %a{:href => "#"}>= action.user.name
                      ちゃんが「#{action.item.name}」を
                      %a{:href => "#"}> ゴミ箱リスト
                      に追加しました。
